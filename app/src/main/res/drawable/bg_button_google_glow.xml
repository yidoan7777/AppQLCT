<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#60FF6B35" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Middle Glow Layer -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <corners android:radius="13dp" />
        </shape>
    </item>
    
    <!-- Main Shadow Layer -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#60000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Main Gradient Layer -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF6B35"
                android:centerColor="#F7931E"
                android:endColor="#FFD23F" />
            <corners android:radius="12dp" />
            <stroke
                android:width="3dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>

